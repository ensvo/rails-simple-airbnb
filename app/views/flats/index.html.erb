<!-- CONTENT -->
<div class="container mt-4">
	<h1>Available flats (<%= @flats.count %>)</h1>
		<% @flats.each do |flat| %>
				<div class="card" style="width: 18rem;">
					<img class="card-img-top" src="https://picsum.photos/800/600" alt="flat image">
					<div class="card-body bg-light">
						<h5 class="card-title font-weight-bold"><%= flat.name %></h5>
						<p class="card-text font-italic"><%= flat.address %></p>
						<p class="card-text"><%= flat.description.truncate(36, separator: ' ') %></p>
						<p class="card-text">🧍<%= flat.number_of_guests %></p>
						<p class="card-text">💸<%= flat.price_per_night %></p>
					</div>
					<div class="card-footer bg-white border-top">
						<%= link_to "More Info", flat_path(flat) %>
						<%= link_to "Edit", edit_flat_path(flat), class: 'text-warning' %>
						<%= link_to "Delete", flat_path(flat), class: 'text-danger', method: :delete, data: { confirm: "Delete #{flat.name}?" } %>
					</div>
				</div>
			<% end %>
	</div>
</div>